# Shora Platform Environment Configuration

# Application
NODE_ENV=development
PORT=3000
FRONTEND_PORT=3001
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# Domain Configuration
DOMAIN=shora.edcopo.info
CADDY_PORT=80
CADDY_HTTPS_PORT=443

# Database
MONGODB_URI=mongodb://mongodb:27017/shora
MONGODB_DB=shora
MONGODB_USER=
MONGODB_PASS=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Real-time
SOCKET_CORS_ORIGIN=http://localhost:3001

# Development
DEBUG=true
LOG_LEVEL=debug

# Production (uncomment when deploying)
# NODE_ENV=production
# API_URL=https://shora.edcopo.info
# FRONTEND_URL=https://shora.edcopo.info
# SOCKET_CORS_ORIGIN=https://shora.edcopo.info
